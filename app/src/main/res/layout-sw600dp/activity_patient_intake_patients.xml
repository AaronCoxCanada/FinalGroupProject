<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.algonquinlive.cst335.finalgroupproject.patient_intake.PatientIntakePatients">

    <TextView
        android:id="@+id/patient_patients_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/patient_patients_label"
        android:textAlignment="center"
        android:textSize="20dp"
        android:layout_margin="20dp"/>

    <ListView
        android:id="@+id/listView"
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/patient_menu"
        android:layout_below="@+id/patient_patients_label" />

    <LinearLayout
        android:id="@+id/patient_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:orientation="horizontal">

        <Button
            android:id="@+id/patient_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/patient_add" />

        <Button
            android:id="@+id/patient_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/patient_edit" />

        <Button
            android:id="@+id/patient_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/patient_delete" />

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/patient_rel"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_toRightOf="@id/listView" >

        <FrameLayout
            android:id="@+id/patient_frame"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true" />
    </RelativeLayout>


</RelativeLayout>
