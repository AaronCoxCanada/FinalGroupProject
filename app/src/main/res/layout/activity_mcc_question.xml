<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.algonquinlive.cst335.finalgroupproject.MccQuestionActivity">
    <TextView
        android:text="Question Add/Edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/mcc_question_txt_question"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Question type:"/>
        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <RadioButton android:id="@+id/mcc_question_rad_multiple"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Multiple Choices"
                android:textSize="12dp"
                android:onClick="onRadioButtonClicked"/>
            <RadioButton android:id="@+id/mcc_question_rad_numeric"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Numeric Answer"
                android:textSize="12dp"
                android:onClick="onRadioButtonClicked"/>
            <RadioButton android:id="@+id/mcc_question_rad_boolean"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="True/False"
                android:textSize="12dp"
                android:onClick="onRadioButtonClicked"/>
        </RadioGroup>
    </LinearLayout>

    <LinearLayout android:orientation="vertical"
        android:id="@+id/mcc_question_container_multiple"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/mcc_question_container_numeric"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/mcc_question_container_boolean"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <RadioButton android:id="@+id/mcc_question_rad_true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="True"
                android:onClick="onRadioButtonClicked"/>
            <RadioButton android:id="@+id/mcc_question_rad_false"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="False"
                android:onClick="onRadioButtonClicked"/>

        </RadioGroup>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button android:id="@+id/mcc_question_btn_save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Save"
            />

        <Button
            android:id="@+id/mcc_question_btn_delete"
            android:text="Delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Button android:id="@+id/mcc_question_btn_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cancel"
            />
    </LinearLayout>


</LinearLayout>
