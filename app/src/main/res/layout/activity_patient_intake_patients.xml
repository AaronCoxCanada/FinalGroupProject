<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.algonquinlive.cst335.finalgroupproject.patient_intake.PatientIntakePatients">


    <TextView
        android:id="@+id/patient_patients_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/patient_patients_label"
        android:textAlignment="center"
        android:textSize="20dp"
        android:layout_margin="20dp"/>

    <ListView
        android:id="@+id/listView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/patient_patients_label" />


</android.support.constraint.ConstraintLayout>
