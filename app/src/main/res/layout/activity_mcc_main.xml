<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.algonquinlive.cst335.finalgroupproject.MccMainActivity">


    <TextView
        android:id="@+id/mcc_main_header"
        android:text="@string/mcc_main_label"
        android:textColor="#070b15"
        android:textSize="18dp"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"/>

    <TextView
        android:id="@+id/mcc_main_title"
        android:text="Question List"
        android:textColor="#070b15"
        android:textSize="15dp"
        android:layout_below="@id/mcc_main_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"/>
    <ListView
        android:layout_below="@+id/mcc_main_title"
        android:layout_above="@id/mcc_main_btn_add"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/mcc_list_view"
        android:padding="5dp">

    </ListView>
    <Button
        android:text="Add Question"
        android:id="@+id/mcc_main_btn_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_margin="5dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Help"
        android:id="@+id/mcc_main_btn_help"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="5dp"/>



</RelativeLayout>
